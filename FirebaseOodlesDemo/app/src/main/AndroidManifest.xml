<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="e.aman.firebaseoodlesdemo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".chats.PersonalChatActivity"
            android:theme="@style/FullScreen"
            ></activity>
        <activity
            android:name=".chats.GroupChatActivity"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".profile.SettingsActivity"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".users.FriendRequestActivity"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".profile.PersonProfileActivity"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".profile.PeopleSearchActivity"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".profile.UserProfileActivity"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".profile.UserRegisterActivity"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".auth.ForgotPasswordActivity"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".auth.SignupActivity"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".admin.AdminMainActivity"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".auth.LoginActivity"
            android:theme="@style/FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".users.MainActivity"
            android:theme="@style/FullScreen" />
    </application>

</manifest>