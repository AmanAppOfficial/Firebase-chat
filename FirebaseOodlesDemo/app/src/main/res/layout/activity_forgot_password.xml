<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".auth.ForgotPasswordActivity">

    <ImageView
        android:id="@+id/oodles_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/oodles_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/forgot_password_username_layout"
        android:layout_width="match_parent"
        android:layout_below="@+id/oodles_logo"
        android:layout_margin="20dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/forgot_password_username_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textSize="15sp"
            android:textColorHint="@android:color/black"
            android:textColor="@android:color/black"
            android:padding="10dp"
            android:hint="Enter your email address"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/forgot_password_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgot_password_username_layout"
        android:text="Forgot Password"
        android:textAllCaps="false"
        android:background="@drawable/round_button_background"
        android:textColor="@android:color/white"
        android:layout_margin="30dp"
        />

</RelativeLayout>