<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.PersonProfileActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/person_profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:civ_border_color="@color/MyColor"
        android:src="@drawable/profile_icon"
        app:civ_border_width="2dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />

    <LinearLayout
        android:id="@+id/person_details_layout"
        android:layout_below="@+id/person_profile_image"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/person_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/person_profile_image"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/person_profile_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="22"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/person_profile_name"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            />


    </LinearLayout>

    <Button
        android:id="@+id/request_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/person_details_layout"
        android:text="Send friend request"
        android:textAllCaps="false"
        android:background="@drawable/round_button_background"
        android:textColor="@android:color/white"
        android:layout_margin="40dp"
        />



</RelativeLayout>