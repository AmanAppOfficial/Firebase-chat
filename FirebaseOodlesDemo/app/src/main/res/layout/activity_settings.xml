<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.SettingsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        app:civ_border_width="2dp"
        android:src="@drawable/profile_icon"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/settings_profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:drawableLeft="@drawable/age_icon"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/settings_profile_image"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@android:color/black"
        />

    <EditText
        android:id="@+id/settings_profile_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="8171508475"
        android:drawableLeft="@drawable/phone_icon"
        android:inputType="number"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/settings_profile_name"
        android:layout_margin="20dp"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@android:color/black"
        />

    <EditText
        android:id="@+id/settings_profile_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/settings_profile_phone"
        android:layout_margin="20dp"
        android:drawableLeft="@drawable/name_icon"
        android:textAlignment="center"
        android:textSize="30sp"
        android:hint="Age"
        android:maxLength="2"
        android:textColorHint="@android:color/black"
        android:textColor="@android:color/black"
        />

    <Button
        android:id="@+id/settings_update_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_profile_age"
        android:background="@drawable/round_button_background"
        android:layout_margin="30dp"
        android:text="Update profile"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        />


</RelativeLayout>